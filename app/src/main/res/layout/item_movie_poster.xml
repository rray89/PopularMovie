<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/movie_poster_grid_height">

    <!--
         Set ImageView on top of TextView.
         TextView shows the title of the movie.
         If image failed to load, display text only.
    -->
    <TextView
        android:id="@+id/tv_movie_poster_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="18sp"
        android:padding="5dp"
        android:gravity="center|start"
        android:ellipsize="marquee" />

    <ImageView
        android:id="@+id/iv_movie_poster_image"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:contentDescription="@string/movie_poster_description"/>

</FrameLayout>
